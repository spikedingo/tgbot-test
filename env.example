# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Bot Mode Configuration
# Set to 'true' for polling mode (Railway deployment)
# Set to 'false' for webhook mode (serverless deployment)
USE_POLLING=false

# Web Application URL (your bot-login-page deployment)
WEB_APP_URL=https://your-web-app.vercel.app

# Webhook URL (required for webhook mode)
WEBHOOK_URL=https://tgbot-test-production.up.railway.app/webhook

# Environment
NODE_ENV=production

# Port (Railway will provide this automatically)
PORT=3001

# Privy configuration
PRIVY_APP_ID=your_privy_app_id
PRIVY_APP_SECRET=your_privy_app_secret

# Encryption key for sensitive data (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
ENCRYPTION_KEY=your_32_byte_encryption_key_here
