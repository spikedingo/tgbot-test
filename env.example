# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Bot Mode Configuration
# Set to 'true' for polling mode (Railway deployment)
# Set to 'false' for webhook mode (serverless deployment)
USE_POLLING=true

# Web Application URL (your bot-login-page deployment)
WEB_APP_URL=https://your-web-app.vercel.app

# Webhook URL (only needed if USE_POLLING=false)
WEBHOOK_URL=https://your-bot-service.railway.app/webhook

# Environment
NODE_ENV=production

# Port (Railway will provide this automatically)
PORT=3001
